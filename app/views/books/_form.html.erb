<%= form_for @book do |b| %>
    <%= b.label :title %> 
    <%= b.text_field :title %> 
    <%= b.label :genre %> 
    <%= b.select(:genre_id, Genre.all.collect { |n| [n.name, n.id] }) %>
    <%= b.label :author %>
    <%= b.select :author_ids, Author.all.collect {|a| [a.name, a.id]}, {}, multiple: true %>
    <%= b.label :keyword %>
    <%= b.select :keyword_ids, Keyword.all.collect {|k| [k.name, k.id]}, {}, multiple: true %>

    <%= b.submit "submit", class: "btn2" %>
<% end %>