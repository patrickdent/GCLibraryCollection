<h2>All Books</h2>
<% if admin_user? %>
  <%= link_to "New Book", new_book_path, class: "go-btn right" %>
<% end %>

<table class="index tablesorter">
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Author(s)</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |b| %>
    <tr>
      <td>
        <% if librarian_user? %>
          <%=  check_box_tag :selected, b.id, b.selected, id: "book-select_#{b.id}"  %>
        <% end %>
        <%= link_to b.title, book_path(b.id) %>
      </td>
      <td>
      <% if b.genre %>
        <%= link_to b.genre.name, genre_path(b.genre) %>
      <% end %>
      </td>
      <td>
        <% b.authors.each do |a| %>
          <%= link_to a.name, author_path(a) %>
        <% end %>
      </td>
      <td>
        <% if librarian_user? %>
          <%= link_to "edit", edit_book_path(b) %>
          <% if admin_user? %>
            <%= link_to "delete", book_path(b), method: :delete, data: {confirm: "Are you sure you want to delete this book?"} %>
          <% end %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>