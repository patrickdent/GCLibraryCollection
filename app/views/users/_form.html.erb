<%= form_for @user do |u| %>
  <fieldset>
    <%= u.label :name %>
    <%= u.text_field :name %>
  </fieldset>
  <fieldset>
    <%= u.label :preferrred_first_name %>
    <%= u.text_field :preferrred_first_name %>
  </fieldset>
  <fieldset>
    <%= u.label :phone %>
    <%= u.text_field :phone %>
  </fieldset>
  <fieldset>
    <%= u.label :address %>
    <%= u.text_field :address %>
  </fieldset>
  <fieldset>
    <%= u.label :notes %>
    <%= u.text_field :notes %>
  </fieldset>
  <fieldset>
    <%= u.label :do_not_lend %>
    <%= u.check_box :do_not_lend %>
  </fieldset>
  <% if admin_user? %>
    <fieldset>
    <br >
    <%= label_tag :role %>
    </fieldset>
    <fieldset>
      <%= u.label :role, "admin" %>
      <%= u.radio_button(:role, :admin, {}) %>
    </fieldset>
    <fieldset>
      <%= u.label :role, "librarian" %>
      <%= u.radio_button(:role, :librarian, {}) %>
    </fieldset>
    <fieldset>
      <%= u.label :role, "patron" %>
      <%= u.radio_button(:role, nil, {}) %>
    </fieldset>
  <% end %>
  <%= u.submit "Submit", class: "" %>
<% end %>

