<table>
  <thead>
  <% @librarian_user = librarian_user? %>
  <% @admin_user = admin_user? %>
    <tr>
      <th><%= sortable "title", "Title" %></th>
      <!-- unimplemented -->
      <th>Author</th>
      <th><%= sortable "name", "Category" %></th>
      <th><%= sortable "available", "Available" %></th>
      <% if @librarian_user %>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |b| %>
      <% on_loan = "on-loan" if !b.available %>
      <% in_storage = "in-storage" if b.in_storage %>
      <tr class="<%= on_loan %>">
        <td>
          <%=  check_box_tag :selected, b.id, b.selected?(session[:selected_books]), id: "book-select_#{b.id}" if @librarian_user %>
          <%= link_to b.title, book_path(b.id) %>
        </td>

        <td>
          <% primary_author = b.primary_author %>
          <% other_contributors = b.other_contributors %>
          <%= link_to primary_author.display_name, author_path(primary_author) if primary_author %>
          <% unless other_contributors.empty? %>*<% end %>
          <% other_contributors.each do |a| %>
            | <%= link_to a.display_name, author_path(a) %>
          <% end %>
        </td>

        <td>
          <%= link_to b.genre.name, genre_path(b.genre) if b.genre %>
        </td>

        <td>
          <span class="<%= on_loan %>"></span>
          <span class="<%= in_storage %>"></span>
          <!-- icon shows up here if book is on loan/in storage -->
        </td>

        <% if @librarian_user %>
          <td>
            <%= link_to "edit", edit_book_path(b)  %>
            <% if @admin_user %>
              <%= link_to "delete", book_path(b), method: :delete, data: {confirm: "Are you sure you want to delete this book?"} %>
            <% end %>
          </td>
        <% end %>

      </tr>
    <% end %>
  </tbody>

</table>

<%= will_paginate @books %>
