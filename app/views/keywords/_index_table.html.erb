<table>

  <thead>
    <tr>
      <th><%= sortable "name", "Keyword" %></th>
      <!-- unimplemented -->
      <th>Number of Books</th>
      <% if librarian_user? %>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @keywords.each do |k| %>
    <tr>
      <td> <%= link_to k.name, keyword_path(k) %></td>

      <td><%= k.books.count %></td>

      <% if librarian_user? %>
        <td>
          <%= link_to "edit", edit_keyword_path(k) %>
          <%= link_to "delete", keyword_path(k), method: :delete, data: {confirm: "Are you sure you want to delete this keyword?"} %>
        </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>

</table>
<%= will_paginate @keywords %>