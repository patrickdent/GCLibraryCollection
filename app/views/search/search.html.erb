<div class = "results">
  <h2> Search Results </h2>


  <% if @authors || @books || @genres || @keywords || @users %>
    <h3>Authors:</h3>
    <div class="search-results">
      <ul>
        <% @authors.each do |a| %>
          <li class="results"><%= link_to a.name, author_path(a.id) %>, titles: <%= a.books.count %></li>
        <% end %>
      </ul>
    </div>


    <h3>Books:</h3>
    <div class="search-results">
    <ul>
      <% @books.each do |b| %>
        <li class="results">
        <% if librarian_user? %>
          <%=  check_box_tag :selected, b.id, b.selected, id: "book-select_#{b.id}"  %>
        <% end %>
        <%= link_to b.title, book_path(b.id) %>
        </li>
      <% end %>
    </ul>
    </div>


    <h3>Categories:</h3>
    <div class="search-results">
      <ul>
        <% @genres.each do |g| %>
          <li class="results"><%= link_to g.name, genre_path(g.id) %></li>
        <% end %>
    </ul>
    </div>

    <h3>Keywords:</h3>
    <div class="search-results">
      <ul>
        <% @keywords.each do |k| %>
          <li class="results"><%= link_to k.name, keyword_path(k.id) %></li>
        <% end %>
      </ul>
    </div>

    <% if librarian_user? %>
      <h3>Users:</h3>
      <div class="search-results">
        <ul>
          <% @users.each do |k| %>
            <li class="results"><%= link_to k.name, user_path(k.id) %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <% else %>
    <p> Your search yeilded no results. </p>
  <% end %>

</div>
