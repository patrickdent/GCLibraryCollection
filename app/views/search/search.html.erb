<div class = "results">
  <h2> Search Results </h2>


  <% if @authors || @books || @genres || @keywords %>
    <h3>Authors:</h3>
    <% @authors.each do |a| %>
      <p class="results"><%= link_to a.name, author_path(a.id) %>, total: <%= a.books.count %></p>
    <% end %>
    <h3>Books:</h3>
    <% @books.each do |b| %>
      <p class="results"><%= link_to b.title, book_path(b.id) %></p>
    <% end %>
    <h3>Genres:</h3>
    <% @genres.each do |g| %>
      <p class="results"><%= link_to g.name, genre_path(g.id) %></p>
    <% end %>
    <h3>Keywords:</h3>
    <% @keywords.each do |k| %>
      <p class="results"><%= link_to k.name, keyword_path(k.id) %></p>
    <% end %>
    
  <% else %>
    <p> Your search yeilded no results. </p>
  <% end %>

    <div class = "search">
    <h3>Search Again</h3>
    <%= form_tag "/search", method: "get" do %>
      <p>
        <%= label_tag "search for:" %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "search", name: nil, class: "" %>
      </p>
    <% end %>
  </div>

  <%= link_to "home", root_path, class: "" %>
</div>
